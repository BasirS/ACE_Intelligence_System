---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <!-- Hero Section (visual slot intentionally empty to remove default visualization) -->
    <Hero
      title="About ClearLane"
      subtitle="Data-Driven Transit Solutions"
      description="Learn about our mission to protect student study time through evidence-based bus enforcement strategies."
      ctaText="View Our Research"
      ctaHref="/ACE_Intelligence_System/methodology"
      secondaryCtaText="See Findings"
      secondaryCtaHref="/ACE_Intelligence_System/findings"
      variant="data"
    >
      <div slot="visual"></div>
    </Hero>

    <!-- Mission Section -->
    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{mission.title}</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">{mission.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {mission.values.map((value) => (
            <Card className="text-center p-6">
              <div class="text-4xl mb-4 emoji-container" role="img" aria-label={`${value.title} icon`}>{value.icon}</div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">{value.title}</h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">{value.description}</p>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{story.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-700 dark:text-gray-300">
          <p class="text-lg leading-relaxed">{story.content}</p>
        </div>
      </div>
    </section>

    <!-- Methodology Section -->
    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{methodology.title}</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">{methodology.description}</p>
        </div>

        <div class="space-y-8">
          {methodology.steps.map((step, index) => (
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                  {index + 1}
                </div>
              </div>
              <div class="ml-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{step.step}</h3>
                <p class="text-gray-700 dark:text-gray-300 mb-2">{step.description}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">{step.details}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{team.title}</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">{team.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {team.members.map((member) => (
            <Card className="p-8">
              <div class="text-center">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{member.name}</h3>
                <p class="text-lg text-primary-600 mb-2">{member.role}</p>
                <p class="text-gray-600 dark:text-gray-300 mb-4">{member.affiliation}</p>
                <p class="text-gray-700 dark:text-gray-300 mb-4">{member.background}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400 italic">{member.contribution}</p>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Impact Section -->
    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{impact.title}</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">{impact.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {impact.metrics.map((metric) => (
            <div class="text-center">
              <div class="text-4xl font-bold text-primary-600 mb-2">{metric.value}</div>
              <div class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{metric.label}</div>
              <div class="text-sm text-gray-600 dark:text-gray-300">{metric.description}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Next Steps Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{nextSteps.title}</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">{nextSteps.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {nextSteps.initiatives.map((initiative) => (
            <Card className="p-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{initiative.title}</h3>
              <p class="text-gray-700 dark:text-gray-300 mb-3">{initiative.description}</p>
              <div class="text-sm text-primary-600 font-medium">Timeline: {initiative.timeline}</div>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-16 bg-secondary-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold mb-6">
          Ready to Make a Difference?
        </h2>
        <p class="text-xl text-green-200 mb-8 max-w-2xl mx-auto">
          Join us in protecting student study time through data-driven transit enforcement.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/ACE_Intelligence_System/findings" variant="primary" size="lg">
            Explore Our Findings
          </Button>
          <Button href="/ACE_Intelligence_System/solution" variant="ghost" size="lg" className="text-white border-white">
            See the Solution
          </Button>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <Footer />
</BaseLayout>
